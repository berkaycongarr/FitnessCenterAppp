@model FitnessApp.Models.AIRequestVM

@{
    ViewData["Title"] = "Akıllı Antrenör";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center py-4">
                    <h3><i class="fa-solid fa-robot text-info"></i> AI Coach</h3>
                    <p class="mb-0">Yapay Zeka Destekli Program Oluşturucu</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Index" method="post">
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fa-solid fa-ruler-vertical"></i> Boyunuz (cm)</label>
                            <input asp-for="Boy" class="form-control" type="number" placeholder="Örn: 175" />
                            <span asp-validation-for="Boy" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fa-solid fa-weight-scale"></i> Kilonuz (kg)</label>
                            <input asp-for="Kilo" class="form-control" type="text" placeholder="Örn: 70" />
                            <span asp-validation-for="Kilo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fa-solid fa-venus-mars"></i> Cinsiyet</label>
                            <select asp-for="Cinsiyet" class="form-select">
                                <option value="Kadın">Kadın</option>
                                <option value="Erkek">Erkek</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fa-solid fa-bullseye"></i> Hedefiniz</label>
                            <select asp-for="Hedef" class="form-select">
                                <option value="Kilo Verme">Kilo Vermek & Yağ Yakmak</option>
                                <option value="Kas Yapma">Kas Kütlesi Kazanmak</option>
                                <option value="Form Koruma">Mevcut Formu Korumak</option>
                            </select>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa-solid fa-wand-magic-sparkles"></i> Programımı Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            @if (!string.IsNullOrEmpty(Model.AIResult))
            {
                <div class="card shadow border-success h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fa-solid fa-check-circle"></i> Programınız Hazır!</h5>
                    </div>
                    <div class="card-body bg-light">
                        @Html.Raw(Model.AIResult)
                        
                        <div class="mt-4 text-center">
                            <a asp-controller="Randevu" asp-action="Al" class="btn btn-outline-success">
                                <i class="fa-solid fa-calendar-check"></i> Bu Programa Uygun Randevu Al
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card h-100 border-0 bg-transparent text-center justify-content-center text-muted">
                    <i class="fa-solid fa-microchip fa-5x mb-3"></i>
                    <h4>Henüz analiz yapılmadı.</h4>
                    <p>Sol taraftaki bilgileri doldurup "Programımı Oluştur" butonuna basınız.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}