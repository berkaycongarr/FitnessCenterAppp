@model FitnessApp.Entities.Hizmet

@{
    ViewData["Title"] = "Hizmet Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4>Yeni Hizmet Tanımla</h4>
            </div>
            <div class="card-body">
                <form asp-action="HizmetEkle" method="post">
                    
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Ad" class="form-label">Hizmet Adı</label>
                        <input asp-for="Ad" class="form-control" placeholder="Örn: Pilates, Fitness, Boks" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Ucret" class="form-label">Ücret (₺)</label>
                            
                            <input asp-for="Ucret" class="form-control" type="text" placeholder="Örn: 500,50" />
                            
                            <span asp-validation-for="Ucret" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Sure" class="form-label">Süre (Dakika)</label>
                            <input asp-for="Sure" class="form-control" type="number" placeholder="60" />
                            <span asp-validation-for="Sure" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a asp-action="Hizmetler" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
