@model IEnumerable<FitnessApp.Entities.Antrenor>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Eğitmen Kadrosu</h2>
    <a asp-action="AntrenorEkle" class="btn btn-success"><i class="fa-solid fa-user-plus"></i> Yeni Antrenör Ekle</a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="bg-dark text-white">
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="5" class="text-center">Henüz antrenör eklenmemiş.</td></tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad @item.Soyad</td>
                    <td><span class="badge bg-info text-dark">@item.UzmanlikAlani</span></td>
                    <td>@item.User?.Email</td>
                    <td>@item.User?.Phone</td>
                    <td>
                        <a asp-action="AntrenorSil" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Antrenörü silerseniz kullanıcı hesabı da silinir. Emin misiniz?');">
                            <i class="fa-solid fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">Admin Paneline Dön</a>