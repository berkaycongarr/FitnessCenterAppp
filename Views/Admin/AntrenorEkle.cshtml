@model FitnessApp.Models.AntrenorEkleVM

@{
    ViewData["Title"] = "Antrenör Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4>Yeni Eğitmen Tanımla</h4>
            </div>
            <div class="card-body">
                <form asp-action="AntrenorEkle" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Ad" class="form-label">Ad</label>
                            <input asp-for="Ad" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Soyad" class="form-label">Soyad</label>
                            <input asp-for="Soyad" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UzmanlikAlani" class="form-label">Uzmanlık Alanı</label>
                        <input asp-for="UzmanlikAlani" class="form-control" placeholder="Örn: Fitness, Pilates, Yoga" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Email (Giriş için)</label>
                            <input asp-for="Email" class="form-control" type="email" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label">Telefon</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Giriş Şifresi Belirle</label>
                        <input asp-for="Password" class="form-control" type="text" />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <a asp-action="Antrenorler" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>