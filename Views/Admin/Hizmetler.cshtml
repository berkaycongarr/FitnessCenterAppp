@model IEnumerable<FitnessApp.Entities.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Hizmet Listesi</h2>
    <a asp-action="HizmetEkle" class="btn btn-success"><i class="fa-solid fa-plus"></i> Yeni Hizmet Ekle</a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="bg-dark text-white">
        <tr>
            <th>Hizmet Adı</th>
            <th>Ücret</th>
            <th>Süre (Dk)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">Henüz kayıtlı hizmet yok.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.Ucret ₺</td>
                    <td>@item.Sure dk</td>
                    <td>
                        <a asp-action="HizmetSil" asp-route-id="@item.Id" class="btn btn-sm btn-danger" 
                           onclick="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');">
                            <i class="fa-solid fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Admin Paneline Dön</a>