@{
    ViewData["Title"] = "Anasayfa";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-primary fw-bold">Fitness App'e Hoşgeldiniz</h1>
    <p class="lead mb-4">Sağlıklı bir yaşam için profesyonel eğitmenlerimizle hemen çalışmaya başlayın.</p>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="card shadow-sm p-4 d-inline-block bg-light">
            <h5 class="mb-3">Hazır mısın?</h5>
            <a asp-controller="Randevu" asp-action="Al" class="btn btn-lg btn-success">
                <i class="fa-solid fa-calendar-check"></i> Hemen Randevu Al
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning d-inline-block">
            Randevu almak için lütfen <a asp-controller="Account" asp-action="Login">Giriş Yapın</a> veya 
            <a asp-controller="Account" asp-action="Register">Kayıt Olun</a>.
        </div>
    }
</div>